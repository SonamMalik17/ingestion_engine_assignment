{
  "name": "energy-ingestion-engine",
  "version": "1.0.0",
  "description": "High-Scale Energy Ingestion Engine for Smart Meters and EV Fleets",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "docker:up": "docker compose up -d --build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:reset": "docker compose down -v && docker compose up -d --build",
    "db:up": "docker compose up -d postgres",
    "db:shell": "docker exec -it energy_db psql -U postgres -d energy_db",
    "dev:local": "npm run db:up && sleep 3 && npm run dev"
  },
  "keywords": ["energy", "telemetry", "iot", "ev", "smart-meter"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
